{
  "server": {
    "url": "http://localhost:8001",
    "timeout": 60,
    "max_retries": 3,
    "retry_delay": 1.0,
    "health_check_interval": 60
  },
  "audio": {
    "max_file_size": 10485760,
    "supported_formats": [
      ".wav",
      ".mp3",
      ".m4a"
    ],
    "temp_dir": "temp_audio",
    "auto_cleanup": true,
    "cleanup_interval": 3600
  },
  "ui": {
    "auto_play_tts": true,
    "show_detailed_logs": false,
    "language": "ko",
    "theme": "default",
    "font_size": 12
  },
  "logging": {
    "level": "ERROR",
    "file": "client.log",
    "max_size": 1048576,
    "backup_count": 3,
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  },
  "session": {
    "auto_generate_id": true,
    "session_timeout": 1800,
    "keep_alive_interval": 300
  },
  "performance": {
    "connection_pool_size": 10,
    "request_timeout": 30,
    "download_timeout": 60,
    "upload_chunk_size": 8192
  }
}